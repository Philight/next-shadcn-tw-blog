{
  "root": true,
  "plugins": ["perfectionist", "unused-imports", "prettier"],
  "extends": ["next/core-web-vitals", "eslint:recommended", "plugin:import/recommended"],
  "ignorePatterns": [".git", ".env", ".next", "i18n", "node_modules", "public", "next.config.ts", "postcss.config.mjs", "tailwind.config.ts"],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "rules": {
    "import/newline-after-import": 2,
    "import/no-unused-modules": 2,
    "no-unused-vars": 2,
    "no-console": 2,
    "no-var": 2,
    "curly": [2, "all"],
    // "max-len": [
    //   2,
    //   {
    //     "code": 200
    //   }
    // ],
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "arrow-body-style": [0],
    // "sort-imports": [
    //   2,
    //   {
    //     "memberSyntaxSortOrder": ["none", "single", "multiple", "all"]
    //   }
    // ],
    "no-new": 0,
    "no-underscore-dangle": [
      0,
      {
        "allowAfterSuper": true
      }
    ],
    "max-depth": [2, 3],
    "max-params": [2, 3],
    "complexity": [2, 10],
    "max-lines": [
      2,
      {
        "max": 400,
        "skipBlankLines": true,
        "skipComments": true
      }
    ],
    "max-lines-per-function": [
      2,
      {
        "max": 200,
        "skipBlankLines": true,
        "skipComments": true
      }
    ],
    "max-nested-callbacks": [2, 3],
    "newline-after-var": [2, "always"],
    "no-param-reassign": [
      2,
      {
        "props": true
      }
    ],
    "linebreak-style": [2, "windows"],
    "padding-line-between-statements": [
      2,
      {
        "blankLine": "always",
        "prev": "*",
        "next": "return"
      },
      {
        "blankLine": "always",
        "prev": ["const", "let", "var"],
        "next": "*"
      },
      {
        "blankLine": "any",
        "prev": ["const", "let", "var"],
        "next": ["const", "let", "var"]
      }
    ],
    "no-inline-comments": 2,
    "object-curly-newline": [
      2,
      {
        "ObjectExpression": {
          "multiline": true
        },
        "ObjectPattern": {
          "multiline": true
        },
        "ImportDeclaration": {
          "multiline": true,
          "minProperties": 2
        },
        "ExportDeclaration": {
          "multiline": true,
          "minProperties": 2
        }
      }
    ],
    "object-curly-spacing": [2, "always"],
    "prefer-destructuring": [2]
  }
}
